<% layout('layouts/boilerplate.ejs') %>
<h1>Edit Campground</h1>
<form action="/campgrounds/<%= tarCampground._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input
            type="text"
            id="title"
            name="tarCampground[title]"
            value="<%= tarCampground.title %>" />
    </div>
    <div>
        <label for="location">Location</label>
        <input
            type="text"
            id="location"
            name="tarCampground[location]"
            value="<%= tarCampground.location %>" />
    </div>
    <button>Update Campground</button>
</form>
<a href="/campgrounds/<%= tarCampground._id %>">Back to all Campgrounds</a>
